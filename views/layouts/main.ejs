<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
  <title>Do Tasty!</title>
</head>
<body>
  <div class="bg-warning white">
    <div class="container">
      <div class="row">
        <div class="title-div">GO TASTY</div>
      </div>
      <div class="row">
        <%  if (!user){ %>
        <div class="col-6">
          <div class="menu-item">
            <a href="/auth/signup" >Signup</a>
          </div>
        </div>
        <div class="col-6">
          <div class="menu-item">
            <a href="/auth/login" >Login</a>
          </div>
        </div>
        <% } %>
        <% if (user){ %> 
        <div class="col-3">
          <div class="menu-item">
            <a href="/offers">Offers</a>
          </div>
        </div>
        <% if (user.role === "BUYER"){ %>
        <div class="col-3">
          <div class="menu-item">
            <a href="/coupons">Dashboard</a>
          </div>
        </div>
        <% }else { %>
        <div class="col-3">
          <div class="menu-item">
            <a href="/my-offers">Dashboard</a>
          </div>
        </div>
        <% } %>
        <% if (user.role === "BUYER"){ %>
        <div class="col-3">
          <div class="menu-item">
            <a href="/review">My reviews</a>
          </div>
        </div>
        <% }else { %>
        <div class="col-3">
          <div class="menu-item">
              <a href="/review-restaurant">My reviews</a>
          </div>
        </div>
        <% } %>
        <% } %>
        <% if (user) { %>
        <div class="col-3">
          <div class="menu-item">
            <form method="post" action="/auth/logout">
              <button class="btn-logout">Logout</button>
            </form>
          </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>


<%- body%>

<footer>
  <div class="bg-warning white">
    <% if (user) { %>
      <span class="copyright">
        &copy; Ironhack 2018 - Josep Salvat & Sheng Hu %>
      </span>
  <% } %> 
  </div>
</footer>

</body>
</html>