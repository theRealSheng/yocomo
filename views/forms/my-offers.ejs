<div class="title-page-deg">
  <p class="title-pages">My Dashboard</p>
</div>

<h2>My profile</h2>

<div class="profile-pic">
  <% data.pictures.forEach((picture) => { %>
    <h3>
      <%= picture.name %>
    </h3>
    <img src="<%= picture.path %>" alt="<%= picture.originalName %>" width="100" height="100" />
    <% })%>
</div>

<section>
  <h2>Upload your photo</h2>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="text" name="name">
    <input type="file" name="photo">
    <input type="submit" value="Save">
  </form>
</section>

<button id="create-btn">+ Create</button>

<form id="offer-container" style="display:none" action="/my-offers" method="POST">

  <div class="offer-form">
    <label for="dealName">Coupon Name: </label>
    <input type="text" name="dealName">
  </div>

  <div class="offer-form">
    <label for="price">Price for Offer:</label>
    <input type="number" name="price">
  </div>

  <div class="offer-form">
    <label for="quantity">Quantity of Deals Available: </label>
    <input type="number" name="quantity">
  </div>

  <div class="create">
    <input type="submit" value="Create">
  </div>

</form>


<!-- here goes the list of my offers -->

<div class="offer-wrapper">
  <% offers.forEach((offer)=> { %>
    <div class="offer-single">
      <h4>
        <%= offer.name %>
      </h4>
      <p>
        Deal:
        <%= offer.dealname %>
      </p>
      <p>
        Price:
        <%= offer.price %>
      </p>
      <p>
        Quantity left:
        <%= offer.quantity %>
      </p>
    </div>
    <% }); %>
</div>

<script src="/javascripts/create-offer.js"></script>
