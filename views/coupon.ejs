<div class="title-page-deg">
  <p class="title-pages">My Dashboard</p>
</div>
<h2 class="copyright">My profile</h2>
<div="container">
<div class="container-profile">
  <div class="profile-pic">
    <% data.pictures.forEach((picture) => { %>
      <h3>
        <%= picture.name %>
      </h3>
      <img src="<%= picture.path %>" class="img-profile"alt="<%= picture.originalName %>" width="100vw" height="100vh" />
      <% })%>
  </div>
  <div class="info-dashboard">
    <p>Name:  <%= user.name %></p>
    <p>Email:  <%= user.email%> </p>
  </div>
</div>
  <div class="profile-pic">
    <h2>Upload your photo</h2>
      <form action="/upload" method="post" enctype="multipart/form-data">
        
    <input type="text" name="name">
    <input type="file" name="photo">
    <input type="submit" value="Save">
  
      </form>

    

</div>

     
    
</div>

<% coupons.forEach(coupon => { %>
 <div class="container">
  <div class="offers-container">
    <div class="rest-name">
      <%= coupon.name %>
    </div>
    <div class="rest-info">
      <div class="offer-div">
        <p> Deal:</p>
        <p> Price:</p>
        <p> Quantity:</p>
        <p> Status:</p>
      </div>
      <div class="result-div">
        <p><%= coupon.dealname %></p>
        <p><%= coupon.price + ' â‚¬'%></p>
        <p><%= coupon.quantity + ' Coupons' %></p>
        
        <% if (!coupon.status) { %>
          <p>Not used</p>
        <% } else { %>
          <p>Used</p>
        <% } %>
      </div>
    </div>

    <form action="/useCoupon/<%=coupon._id%>" method="post">
      Coupon #:
      <button class="use-coupon">
         <% if (coupon.status) { %>
          <%= coupon._id %>
         <% } else { %>
          Click to use
          <%}; %>
      </button>
    </form>
        
    <% if (coupon.status) { %>
    <button class="btn btn-warning review-btn">+ Add Review</button>
      <% }; %>

    <form class="review-container" style="display:none" action="/review/<%=coupon._id%>" method="post">
      <div class="form-reviews">
        <div class="form-group">
          <label for="rate">Rate from 1 to 5:</label>
          <input type="number" name="rate" min="0" max="5" required>
        </div>
      </div>
      <div class="form-reviews">
        <div class="form-group">
          <label for="review-box">Please insert review in box below:</label>
          <textarea name="comment" id="comment" class="form-control" cols="2" rows="2" required></textarea>
        </div>
      </div>
      <div class="form-group">
        <input type="submit" class=" btn btn-warning" value="Submit Review">
      </div>
    </form>
  </div>
</div>
<% }); %>

<script src="/javascripts/create-review.js"></script>